            <stroke
                android:width="1dp"
                android:color="@color/dark_primary" />

            <solid android:color="#00FFFFFF" />

            <padding android:left="@dimen/length_mini"
                android:right="@dimen/length_mini"
                android:top="@dimen/length_mini"
                android:bottom="@dimen/length_mini" />
        </shape>
    </item>

</layer-list>